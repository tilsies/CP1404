BoxLayout:
    orientation: "vertical"

    BoxLayout:
        orientation: "horizontal"

        TextInput:
            id: input_miles
            text: "34"
            font_size: 50
            on_text: app.calculate

        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.3
            Button:
                text: "Up"
                font_size: 35
                on_press: app.change(1)
            Button:
                text: "Down"
                font_size: 35
                on_press: app.change(-1)

    Button:
        text: "Convert miles to km"
        font_size: 35
        on_press:

    Label:
        id: output_label
        font_size: 50
        text: "54.717"
        color: (1, 1, 0, 1)
